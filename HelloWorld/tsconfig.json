{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022", "DOM"],
        "module": "commonjs",
        "rootDir": "./src",
        "declaration": true,
        "outDir": "./build/src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "types": ["node"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build", "dist"]
}
